<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>

	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/qrservices?serverTimezone=UTC</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.current_session_context_class">thread</property>
		
		<mapping class="com.lefonddeletang.qrservices.model.beans.UserBean"/>
		<mapping class="com.lefonddeletang.qrservices.model.beans.ServiceBean"/>
		<mapping class="com.lefonddeletang.qrservices.model.beans.LikeMeterBean"/>
		<mapping class="com.lefonddeletang.qrservices.model.beans.GuestbookBean"/>
		<mapping class="com.lefonddeletang.qrservices.model.beans.CommentBean"/>
		<mapping class="com.lefonddeletang.qrservices.model.beans.NewsletterBean"/>
		<mapping class="com.lefonddeletang.qrservices.model.beans.SurveyBean"/>


	</session-factory>
	
</hibernate-configuration>